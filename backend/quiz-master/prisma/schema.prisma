generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Themes {
  themeId  String      @id @default(cuid())
  theme    String
  question Questions[]
}

model Questions {
  questionId String    @id @default(cuid())
  question   String
  Answer     Answers[]
  themeId    String
  Themes     Themes    @relation(fields: [themeId], references: [themeId])
}

model Answers {
  answerId   String    @id @default(cuid())
  answer     String
  isCorrect  Boolean   @default(false)
  questionId String
  question   Questions @relation(fields: [questionId], references: [questionId])
}

model Lobby {
  lobbyId          String   @id @default(cuid())
  lobbyCode        String   @default(cuid())
  current_question Int      @default(0)
  isOver           Boolean  @default(false)
  Player           Player[]
}

model Player {
  playerId String @id @default(cuid())
  name     String
  score    Int
  lobbyId  String
  Lobby    Lobby  @relation(fields: [lobbyId], references: [lobbyId])
}
